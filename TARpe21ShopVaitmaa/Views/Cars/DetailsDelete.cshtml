@model TARpe21ShopVaitmaa.Models.Car.CarDetailsDeleteViewModel

@if (Model.isDeleting)
{
    <h1>Delete</h1>
}
else
{
    <h1>Details</h1>
}



<div>

    <h4>Real Estate</h4>
    <hr />
    <dl class="row">
        <div class="form-group-row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group-row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Brand)
        </div>

        <div class="form-group-row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Model)
        </div>

        <div class="form-group-row">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Year)
        </div>

        <div class="form-group-row">
            <label asp-for="IsUsed" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.IsUsed)
        </div>

        <div class="form-group-row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>

        <div class="form-group-row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>

    </dl>

    @if (Model.isDeleting)
    {
        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" asp-controller="cars" class="btn btn-primary">Back</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    }else
    {
        <a asp-action="Index" asp-controller="cars" class="btn btn-primary">Back</a>    
    }
    
</div>
<hr />
