@model IEnumerable<TARpe21ShopVaitmaa.Models.Spaceship.SpaceshipIndexViewModel>
@{
    ViewData["Title"] = "Index";
    int rowNumber =1;
}
<div class="h1">Products</div>
<div>
    <a asp-action="Add" asp-controller="Spaceships" type="submit" class="btn btn-primary">Add a spaceship</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passengers</th>
                <th scope="col">Engine Power</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceship in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceship.Name</td>
                    <td>@spaceship.Type</td>
                    <td>@spaceship.PassengerCount</td>
                    <td>@spaceship.EnginePower</td>
                    <td>
                        <a asp-action="edit" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" type="submit" class="btn btn-danger" value="delete"/>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>